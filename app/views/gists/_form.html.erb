<table summary="Gists form fields">
  <tr>
    <th><%= f.label(:snippet) %></th>
    <td><%= f.text_area(:snippet, :size => '40x10') %></td>
  </tr>
  <tr>
    <th><%= f.label(:language_id, "Language") %></th>
    <td><%= f.select(:language_id, @languages.collect {|p| [p.name, p.id]}) %>
    </td>
  </tr>
  <tr>
    <th><%= f.label(:description) %></th>
    <td><%= f.text_area(:description, :size => '40x5') %></td>
  </tr>
</table>
