<% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Languages - List</div>
  <div class="panel-body">
    <%= link_to("Add new Language", {:action => 'create'}, :class => 'action btn btn-success') %>
  </div>

  <!-- Table -->
  <table class="table languages-table gists">
    <tr class="header">
      <th class="language">Language</th>
      <th class="difficulty">Difficulty</th>
      <th class="createDate">Create Date</th>
      <th class="showBtn">Show</th>
      <th class="editBtn">Edit</th>
      <th class="deleteBtn">Delete</th>
    </tr>
    <% @languages.each do |language| %>
        <tr>
          <td class="language"><%= language.name %></td>
          <td class="difficulty"><%= language.difficulty %></td>
          <td class="createDate"><%= fixDate(language.created_at) %></td>
          <td class="showBtn"><%= link_to("Show", {:action => 'show', :id => language.id}, :class => 'action btn btn-primary') %></td>
          <td class="editBtn"><%= link_to("Edit", {:action => 'edit', :id => language.id}, :class => 'action btn btn-warning') %></td>
          <td class="editBtn"><%= link_to("Delete", {:action => 'delete', :id => language.id}, :class => 'action btn btn-danger') %></td>
        </tr>
    <% end %>
  </table>
</div>